<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/options_item_height"
        android:textSize="@dimen/options_item_text_size"
        android:textColor="@color/text_color_options_item"/>
    <TextView
        android:id="@+id/mark"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/content"
        android:layout_height="@dimen/options_item_height"
        android:textSize="@dimen/options_item_mark_text_size"
        android:textColor="@color/text_color_options_item_mark"/>
</RelativeLayout>