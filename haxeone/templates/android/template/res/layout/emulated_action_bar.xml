<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/emulated_status_bar_height"
    android:background="@color/backgroud_emulated_action_bar">
    <ImageView
        android:id="@+id/icon"
        android:contentDescription="@string/contentDescription_action_bar_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/action_bar_title"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/emulated_status_bar_title_text_size"
        android:textColor="@color/emulated_action_bar_text_color" />
</RelativeLayout>