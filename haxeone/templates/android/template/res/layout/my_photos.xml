<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/welcome_page_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView android:text="@string/title_my_photos"
        android:id="@+id/title"
        android:textSize="@dimen/welcome_title_text_size"
        android:textColor="@color/welcome_title_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ListView
        android:id="@+id/my_photos_list"
        android:layout_below="@id/title"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
</RelativeLayout>


