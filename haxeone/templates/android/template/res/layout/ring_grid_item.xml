<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/thumb"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:contentDescription="@string/contentDescription_thumb_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_show_item_ring"
        android:src="@drawable/empty_photo" />

    <TextView
        android:id="@+id/price"
        android:textColor="@color/text_color_item_pirce"
        android:textSize="8sp"
        android:background="@color/backgroud_show_item_pirce"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/check"
        android:contentDescription="@string/contentDescription_check_image_view"
        android:src="@android:drawable/checkbox_on_background"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>